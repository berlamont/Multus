<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Multus.Views.NotesDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Multus.ViewModels"
    x:DataType="vm:NotesDetailViewModel">
    <ScrollView>
        <VerticalStackLayout Margin="12">
            <Label FontSize="Header" Text="{Binding Item.Title}" />
            <Label FontSize="Default" Text="{Binding Item.Description}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
