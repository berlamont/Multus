<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Multus.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Multus.ViewModels"
    x:DataType="vm:MainViewModel">

    <Grid
        Padding="16"
        ColumnDefinitions="*,*,*,*"
        ColumnSpacing="2"
        RowDefinitions="2*,*,*,*,*,*"
        RowSpacing="2">

        <Label
            x:Name="CurrentCalculation"
            Grid.Row="0"
            Grid.ColumnSpan="4"
            FontSize="22"
            HorizontalTextAlignment="End"
            LineBreakMode="NoWrap"
            Text=""
            TextColor="{StaticResource Light}"
            VerticalTextAlignment="Start" />

        <Label
            x:Name="resultText"
            Grid.ColumnSpan="4"
            FontAttributes="Bold"
            FontSize="64"
            HorizontalTextAlignment="End"
            LineBreakMode="NoWrap"
            Text="0"
            TextColor="{StaticResource Light}"
            VerticalTextAlignment="End" />

        <BoxView
            Grid.Row="0"
            Grid.ColumnSpan="4"
            BackgroundColor="{StaticResource LightGray}"
            HeightRequest="1"
            VerticalOptions="End" />

        <Button
            Grid.Row="1"
            Grid.Column="0"
            Clicked="OnClear"
            Text="C" />
        <Button
            Grid.Row="1"
            Grid.Column="1"
            Clicked="OnNegative"
            Text="+/-" />
        <Button
            Grid.Row="1"
            Grid.Column="2"
            Clicked="OnPercentage"
            Text="%" />

        <Button
            Grid.Row="2"
            Grid.Column="0"
            Clicked="OnSelectNumber"
            Text="7" />
        <Button
            Grid.Row="2"
            Grid.Column="1"
            Clicked="OnSelectNumber"
            Text="8" />
        <Button
            Grid.Row="2"
            Grid.Column="2"
            Clicked="OnSelectNumber"
            Text="9" />

        <Button
            Grid.Row="3"
            Grid.Column="0"
            Clicked="OnSelectNumber"
            Text="4" />
        <Button
            Grid.Row="3"
            Grid.Column="1"
            Clicked="OnSelectNumber"
            Text="5" />
        <Button
            Grid.Row="3"
            Grid.Column="2"
            Clicked="OnSelectNumber"
            Text="6" />

        <Button
            Grid.Row="4"
            Grid.Column="0"
            Clicked="OnSelectNumber"
            Text="1" />
        <Button
            Grid.Row="4"
            Grid.Column="1"
            Clicked="OnSelectNumber"
            Text="2" />
        <Button
            Grid.Row="4"
            Grid.Column="2"
            Clicked="OnSelectNumber"
            Text="3" />

        <Button
            Grid.Row="5"
            Grid.Column="0"
            Clicked="OnSelectNumber"
            Text="00" />
        <Button
            Grid.Row="5"
            Grid.Column="1"
            Clicked="OnSelectNumber"
            Text="0" />
        <Button
            Grid.Row="5"
            Grid.Column="2"
            Clicked="OnSelectNumber"
            Text="." />

        <Button
            Grid.Row="1"
            Grid.Column="3"
            Clicked="OnSelectOperator"
            Text="÷" />
        <Button
            Grid.Row="2"
            Grid.Column="3"
            Clicked="OnSelectOperator"
            Text="×" />
        <Button
            Grid.Row="3"
            Grid.Column="3"
            Clicked="OnSelectOperator"
            Text="-" />
        <Button
            Grid.Row="4"
            Grid.Column="3"
            Clicked="OnSelectOperator"
            Text="+" />



        <Button
            Grid.Row="5"
            Grid.Column="3"
            Clicked="OnCalculate"
            Text="=" />

    </Grid>
</ContentPage>
